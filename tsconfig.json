{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "sourceMap": true
  },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "src/__tests__",
    ],
    "ts-node":{
      "esm": true,
      "files": true
    }
  }
