{
    "compilerOptions": {

      "lib": ["es2020"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "nodenext",

      "composite": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": false, //move
      "noUnusedParameters": false, // move
      "outDir": "dist",
      "removeComments": true,
      "rootDirs": ["src"],
      "sourceMap": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,

      "target": "es2020",
      "module": "nodenext",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node":{
      "esm": true,
      "files": true
    }
  }
